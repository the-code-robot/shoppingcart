{
	"compilerOptions": {
		/* Visit https://aka.ms/tsconfig to read more about this file */

		"target": "ES2021",
		"module": "ESNext",
		"jsx": "react",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitAny": true,
		"noEmit": true,
		"moduleResolution": "Node"
	},
	"include": ["src/**/*.ts", "src/**/*.tsx", "types"],
	"exclude": ["node_modules", "dist", "test"]
}
